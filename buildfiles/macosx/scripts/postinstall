#!/bin/sh

chown -R ${appserver.user}:${appserver.group} /opt/appserver

chmod +x /opt/appserver/bin/composer
chmod +x /opt/appserver/bin/appserver
chmod +x /opt/appserver/bin/watcher

chmod -R 775 /opt/appserver

/opt/appserver/sbin/appserverctl start
/opt/appserver/sbin/watcherctl start
/opt/appserver/sbin/phpfpmctl start

exit 0
